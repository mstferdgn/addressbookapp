@model RecoverPasswordVM
@{
    ViewData["Title"] = "RecoverPassword";
    Layout = "~/Views/Shared/_LayoutFurniAccount.cshtml";
}

<div class="col-md-8 col-lg-8 pb-4">


    <form asp-action="RecoverPassword" asp-controller="Account" method="post">

        <div asp-validation-summary="All" style="color:red"></div>
        <div class="row">
            <div class="col-12 mb-5">
                <div class="form-group">
                    <label class="text-black" for="fname">Yeni Şifre:</label>
                    <input type="password" class="form-control" asp-for="NewPassword">
                </div>
            </div>
            <div class="col-12 mb-5">
                <div class="form-group">
                    <label class="text-black" for="fname">Yeni Şifre Tekrar:</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword">
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="Userid" />
        <input type="hidden" asp-for="Token" />
        <button type="submit" class="btn btn-primary-hover-outline">Şifremi Kaydet</button>
    </form>

</div>

