@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <form asp-controller="Account" asp-action="Register" method="post" class="form">
        <div class="row">
            @Html.ValidationSummary(true,"",new {@style="color:blue"})

            <div asp-validation-summary="ModelOnly" style="color:red;"></div>
            <div asp-validation-summary="All" style="color:purple;"></div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label">İsim</label> <br />
                   
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Soyisim</label> <br />
                    <input type="text" class="form-control"  asp-for="Surname"/>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Email</label> <br />
                    <input type="email" class="form-control" asp-for="Email" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Kullanıcı Adı</label> <br />
                    <input type="text" class="form-control" asp-for="Username" />
                </div>
            </div>
        </div>
        <br />


        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Şifre</label> <br />
                    <input type="password" class="form-control" asp-for="Password"/>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Şifre Tekrar</label> <br />
                    <input type="password" class="form-control" asp-for="ConfirmPassword" />

                    @Html.ValidationMessageFor(x=> x.ConfirmPassword,"", new {@style="color:darkgreen"})

                   
                </div>
            </div>
        </div>
        <br />


        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Doğum Tarihi</label> <br />
                    <input type="date" class="form-control" asp-for="Birthdate" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Cinsiyet</label> <br />
                    <select class="form-control" asp-for="Gender">
                        <option value="0">Belirtmek istemiyorum</option>
                        <option value="1">KADIN</option>
                        <option value="2">ERKEK</option>
                    </select>
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-6">
                <button type="submit" class=" btn btn-info">KAYIT OL</button>
            </div>
        </div>

    </form>
</div>
