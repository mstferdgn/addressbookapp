@model AppUser

<nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
    <div class="container-fluid">
    </div>

    <ul class="navbar-nav topbar-nav ms-md-auto align-items-center">

        @if (!string.IsNullOrEmpty(Model.Name))
        {
            <li class="nav-item topbar-user dropdown hidden-caret">
                <a class="dropdown-toggle profile-pic"
                   data-bs-toggle="dropdown"
                   href="#"
                   aria-expanded="false">

                    <div class="avatar-sm">
                        @if (Model.ProfilePicture != null)
                        {
                            <img src="@Model.ProfilePicture"
                                 alt="..."
                                 class="avatar-img rounded-circle" />
                        }
                        else
                        {
                            <img src="~/admintheme/assets/img/anonimprofilepicture.jpg"
                                 alt="..."
                                 class="avatar-img rounded-circle" />
                        }
                    </div>
                    <span class="profile-username">
                        <span class="op-7">Merhaba ADMIN,</span>
                        <span class="fw-bold">@Model.Name @Model.Surname.ToUpper()</span>
                    </span>

                </a>

                <ul class="dropdown-menu dropdown-user animated fadeIn">
                    <div class="dropdown-user-scroll scrollbar-outer">
                    <li>
                        <div class="user-box">
                            <div class="avatar-lg">
                                    @if (Model.ProfilePicture != null)
                                    {
                                    <img src="@Model.ProfilePicture"
                                         alt="..."
                                         class="avatar-img rounded-circle" />
                                    }
                                    else
                                    {
                                    <img src="~/admintheme/assets/img/anonimprofilepicture.jpg"
                                         alt="..."
                                         class="avatar-img rounded-circle" />
                                    }
                            </div>
                            <div class="u-text">
                                <h4>@Model.Name @Model.Surname.ToUpper()</h4>
                                <p class="text-muted">@Model.Email</p>
                                <a href="profile.html"
                                   class="btn btn-xs btn-secondary btn-sm">Profile Git</a>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="dropdown-divider"></div>

                        <a class="dropdown-item" href="#">Gelen Kutusu</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Hesap Ayarları</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Admin/Account/Logout">Çıkış Yap</a>
                    </li>
                    </div>
                </ul>
            </li>
        }

        else
        {
            <li class="nav-item topbar-user dropdown hidden-caret">
                <a href="/Admin/Account/Login">Giriş Yap</a>
            </li>
        }
    </ul>

</nav>