                            <li>
                                <a href="components/buttons.html">
                                    <span class="sub-item">İl Düzenle</span>
                                </a>
                            </li>
                            <li>
                                <a href="components/gridsystem.html">
                                    <span class="sub-item">İl Sil</span>
                                </a>
                            </li>
                            <li>
                                <a href="components/panels.html">
                                    <span class="sub-item">İlçe Ekle</span>
                                </a>
                            </li>
                            <li>
                                <a href="components/notifications.html">
                                    <span class="sub-item">İlçe Düzenle</span>
                                </a>
                            </li>
                            <li>
                                <a href="components/sweetalert.html">
                                    <span class="sub-item">İlçe Sil</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/Home/NeighAdd">
                                    <span class="sub-item">Mahalle Ekle</span>
