                <li class="nav-item">
                    <a href="#adres" data-bs-toggle="collapse">
                        <i class="fas fa-file"></i>
                        <p>Adres İşlemleri</p>
                        <span class="badge badge-secondary">@TempData["TotalAddressCount"]</span>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="adres">
                        <ul class="nav nav-collapse">
                            <li>
                                <a href="components/avatars.html">
