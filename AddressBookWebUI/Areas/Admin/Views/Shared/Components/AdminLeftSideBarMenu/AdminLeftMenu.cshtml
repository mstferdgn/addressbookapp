                            </li>
                            <li>
                                <a href="components/simple-line-icons.html">
                                    <span class="sub-item">Mahalle Düzenle</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/Home/NeighAddExcel">
                                    <span class="sub-item">Mahalle Ekle (Excel)</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
               
                <li class="nav-item">
                    <a href="#users" data-bs-toggle="collapse">
                        <i class="fas fa-desktop"></i>
                        <p>Kullanıcı İşlemleri</p>
                        <span class="badge badge-success">@TempData["TotalUserCount"]</span>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="users">
                        <ul class="nav nav-collapse">
                            <li>
                                <a href="components/avatars.html">
                                    <span class="sub-item">Yeni Kullanıcı Ekle</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/Home/AllUsers">
                                    <span class="sub-item">Tüm Kullanıcılar</span>
                                </a>
                            </li>
                        </ul>
                    </div>
